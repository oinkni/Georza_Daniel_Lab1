@page
@model Georza_Daniel_Lab2.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Category)
        {
            string selectedRow = "";
            if (item.ID == Model.CategoryID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.CategoryData != null)
{
    <h3>Books in @Html.DisplayFor(modelItem => Model.CategoryData.Category.CategoryName)</h3>
    @if (Model.CategoryData != null)
    {
        @if (!Model.CategoryData.Books.Any())
        {
            @:N/A
        }
        <table class="table">
            @{
                foreach (var item in Model.CategoryData.Books)
                {
                    <tr>
                        <td>
                            @item.Title - @item.Author.FullName
                        </td>
                    </tr>
                }
            }
        </table>
    }
}